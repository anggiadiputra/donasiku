# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudflare Turnstile (CAPTCHA)
VITE_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
VITE_TURNSTILE_DISABLED=true  # Set to false in production

# Fonnte WhatsApp API (untuk test koneksi di Settings Page)
VITE_FONNTE_TOKEN=your_fonnte_token_here

# Duitku Payment Gateway
VITE_DUITKU_MERCHANT_CODE=your_merchant_code_here
VITE_DUITKU_API_KEY=your_api_key_here
VITE_DUITKU_SANDBOX=true  # Set to false for production

# Storage Configuration (Optional - pilih salah satu)
# Option 1: Cloudflare R2
VITE_R2_ACCOUNT_ID=
VITE_R2_ACCESS_KEY_ID=
VITE_R2_SECRET_ACCESS_KEY=
VITE_R2_BUCKET_NAME=
VITE_R2_PUBLIC_URL=
VITE_R2_API_ENDPOINT=

# Option 2: AWS S3 Compatible
VITE_S3_ENDPOINT=
VITE_S3_REGION=auto
VITE_S3_BUCKET=
VITE_S3_ACCESS_KEY_ID=
VITE_S3_SECRET_ACCESS_KEY=
VITE_S3_PUBLIC_URL=
VITE_S3_API_ENDPOINT=

# Email SMTP Configuration (Backend - Supabase Secrets)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@donasiku.com
